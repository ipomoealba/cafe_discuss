<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">台灣咖啡地圖</a>
        </div>
        <ul class="nav navbar-nav">

            <li><a href="/">Home</a></li>
            <li><a class="dropdown-toggle" data-toggle="dropdown" href="#"> 地區 <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a href="/district/N">北部</a></li>
                    <li><a href="/district/W">中部</a></li>
                    <li><a href="/district/S">南部</a></li>
                    <li><a href="/district/E">東部</a></li>

                </ul>
            </li>
            <% if(user){ %>
            <li><a href="/editcafePage">我要新增</a></li>
            <% } %>
            <li><a href="/knowledge">咖啡豆知識</a></li>
            <li><a href="/history">咖啡歷史</a></li>
            <% if(!user) { %>
            <li><a href="/login">登入/註冊</a></li>
            <% } %>
            <% if(user) { %>
            <li><a class="dropdown-toggle" id="login" data-toggle="dropdown" href="#"><%= user.userName %> <b
                            class="caret"></b></a>
                <ul class="dropdown-menu">
